/* 水平间距 */
swiper {
  height: 330rpx;
}
swiper .swiper-item,
swiper image {
  width: 100%;
  height: 100%;
}
.nav-list {
  display: flex;
  justify-content: space-around;
  margin: 15px 0;
}
.nav-list .nav-img {
  width: 128rpx;
  height: 140rpx;
}
.floor-title {
  height: 60rpx;
  width: 100%;
  display: flex;
}
.right-img-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.floor-img-box {
  display: flex;
  padding-left: 10rpx;
}
.search-box {
  /* // 设置定位效果为“吸顶” */
  position: -webkit-sticky;
  position: sticky;
  /* // 吸顶的“位置” */
  top: 0;
  /* // 提高层级，防止被轮播图覆盖 */
  z-index: 999;
}

